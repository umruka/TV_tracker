<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.MaterialComponents.CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:paddingStart="16dp"
    android:paddingTop="8dp"
    android:paddingEnd="16dp"
    android:paddingBottom="12dp"
    app:cardBackgroundColor="#E0E0E0">

    <RelativeLayout
        android:id="@+id/sync_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >

        <ProgressBar
            android:id="@+id/syncProgressBar"
            style="?android:attr/progressBarStyleLarge"
            android:progressDrawable="@drawable/circular_progress_bar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            />
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="8dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/details_image_thumbnail"
                    android:layout_width="192sp"
                    android:layout_height="192sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/details_show_state"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/details_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/details_image_thumbnail"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="4dp"
                    android:alpha="0.5"
                    android:text="id"
                    android:textAppearance="?textAppearanceOverline"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/details_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/details_id"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="name"
                    android:textAppearance="?textAppearanceHeadline5" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/details_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/details_name"
                    android:layout_marginTop="4dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="status"
                    android:textAppearance="?textAppearanceSubtitle1" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/details_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/details_status"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="description"
                    android:textAppearance="?textAppearanceBody2" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/details_youtube_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/details_description"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="youtube link"
                    android:textAppearance="?textAppearanceBody2" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/details_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/details_youtube_link"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="rating"
                    android:textAppearance="?textAppearanceBody2" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/details_image_path"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/details_rating"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="image path"
                    android:textAppearance="?textAppearanceBody2" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/details_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/details_image_path"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="country"
                    android:textAppearance="?textAppearanceBody2" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/details_network"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/details_country"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="network"
                    android:textAppearance="?textAppearanceBody2" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/details_pictures_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/details_network"
                />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/seasons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_below="@id/details_pictures_grid"/>

            </RelativeLayout>



        </com.google.android.material.card.MaterialCardView>

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>




