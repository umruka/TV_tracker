<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.MaterialComponents.CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:paddingStart="16dp"
    android:paddingTop="8dp"
    android:paddingEnd="16dp"
    android:paddingBottom="12dp"
    app:cardBackgroundColor="#E0E0E0">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <ProgressBar
                android:id="@+id/episode_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/text_view_watchlist_image_thumbnail"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_below="@id/episode_layout"/>


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/text_view_watchlist_image_thumbnail"
                android:layout_width="96dp"
                android:layout_height="128dp"
                android:layout_marginTop="8dp" />

            <RelativeLayout
                android:id="@+id/episode_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/text_view_watchlist_image_thumbnail"
                android:layout_below="@id/text_view_watchlist_tv_show_name">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/episode_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Episode name" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/episode_release_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/episode_name"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Episode release date" />


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/episode_watch_button"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_toEndOf="@id/episode_name"
                    android:layout_marginTop="8dp" />

            </RelativeLayout>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view_watchlist_tv_show_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/text_view_watchlist_image_thumbnail"
                android:autoSizeMaxTextSize="100sp"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                android:ellipsize="end"
                android:maxLines="1"

                android:text="name"
                android:textAppearance="?textAppearanceHeadline5" />




            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/episode_progress_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textAppearance="?textAppearanceBody2"
                android:layout_below="@id/episode_layout"
                android:layout_toEndOf="@id/episode_progress" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>




